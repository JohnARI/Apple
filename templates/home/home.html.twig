{% extends 'base.html.twig' %}

{% block title %}Accueil - Apple{% endblock %}

{% block body %}
<header class="bg-light py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-black">
            <h1 class="display-4 fw-bolder">Apple</h1>
            <p class="lead fw-normal text-black-50 mb-0">Acheter son produit Apple</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            {% for product in products %}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Sale badge-->
                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale
                    </div>
                    <!-- Product image-->
                    <img class="card-img-top" src="{{product.picture}}" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{product.name}}</h5>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- Product price-->
                            
                            {{product.price}}â‚¬
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-success mb-2 " href="{{ path('addCart', {id: product.id, route : 'home'}) }}">Ajouter au panier</a>
                            <a class="btn btn-outline-dark mt-auto" href="{{path('single_product',{'id':product.id})}}">Voir le produit</a>
                        </div>
                    </div>
                    
                </div>
            </div>

            {% endfor %}



        </div>
    </div>
    </div>
    </div>
</section>
{% endblock %}
